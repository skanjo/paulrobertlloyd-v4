{%- layout 'default' -%}
{%- block 'main' -%}
  {%- include 'footer-event'
    date: date
    start: start
    end: end
    venue: venue
    vocab: vocab
  -%}
  {%- include 'header'
    title: title
    summary: summary
    url: url
  -%}
  {%- capture content -%}
    {%- if image -%}
      {%- include 'image' with image
        class: 'align-start'
        preset: 'thumbnail'
      -%}
    {%- endif -%}
    {{ content }}
  {%- endcapture -%}
  {%- include 'content' with content -%}

  {% for this in category %}
    {%- capture section_title %}Other {{ this }} events{%- endcapture -%}
    {%- assign related = collections.event | includes: 'data.category',this | excludes: 'url',page.url | reverse -%}
    {%- include 'section' with related
      id: 'related'
      title: section_title
      item_modifier: 'inline'
    -%}
  {%- endfor -%}
{%- endblock -%}
