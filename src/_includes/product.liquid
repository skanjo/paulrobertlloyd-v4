<aside class="align-pull | h-product" role="complementary">
{%- if product.photo -%}
  {% include 'image' with product.photo
    class: 'u-photo'
    preset: 'thumbnail'
  %}
{%- endif -%}
  <h3><cite class="p-name">{{ product.title | markdown: 'inline' }}</cite></h3>
{%- if product.rating -%}
  <p>{% include 'rating' with product.rating %}</p>
{%- endif -%}
  {{ product.info | markdown }}
</aside>
